package com.example.fragment_practice;

import androidx.appcompat.app.AppCompatActivity;
import androidx.fragment.app.Fragment;
import androidx.fragment.app.FragmentManager;
import androidx.fragment.app.FragmentTransaction;

import android.os.Bundle;
import android.util.Log;
import android.view.View;
import android.widget.Button;

public class MainActivity extends AppCompatActivity implements View.OnClickListener{

    Button buttonFragmentA;
    Button getButtonFragmentB;

    //FragementManager, Transaction 변수 선언
    FragmentManager fragmentManager;
    FragmentTransaction fragmentTransaction;

    //Fragment Class 생성
    AFragmentActivity afragmentPage;
    BFragmentActivity bFragmentPage;


    @Override
    protected void onCreate(Bundle savedInstanceState) {

        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        initUI();
        getActioned();

    }

    public void initUI(){

        buttonFragmentA = (Button)findViewById(R.id.btn_frag_a);
        getButtonFragmentB = (Button)findViewById(R.id.btn_frag_b);

        afragmentPage = new AFragmentActivity();
        bFragmentPage = new BFragmentActivity();



    }

    public void getActioned(){

        buttonFragmentA.setOnClickListener(this);
        getButtonFragmentB.setOnClickListener(this);

    }


    @Override
    public void onClick(View view) {

        //Fragment 실행 시 기존 Commit 안된 FragmentTransaction으로 진행 해야함

        //FragmentManger 설정
        fragmentManager = getSupportFragmentManager();
        //FragmentTransaction 설정
        fragmentTransaction= fragmentManager.beginTransaction();

        switch (view.getId()){

            case (R.id.btn_frag_a):{

                fragmentTransaction.replace(R.id.frag_main,afragmentPage).commit();
                break;
            }
            case (R.id.btn_frag_b):

                fragmentTransaction.replace(R.id.frag_main,bFragmentPage).commit();
                break;
        }
    }
}
